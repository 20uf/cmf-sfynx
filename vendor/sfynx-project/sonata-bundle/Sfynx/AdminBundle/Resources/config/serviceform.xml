<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.user.form.type.security_roles" class="Sfynx\AdminBundle\Form\Type\SecurityRolesType">
            <tag name="form.type" alias="sfynx_security_roles" />
            <argument type="service" id="service_container" />
        </service>
        <service id="sonata.user.form.type.security_permissions" class="Sfynx\AdminBundle\Form\Type\SecurityPermissionsType">
            <tag name="form.type" alias="sfynx_security_permissions" />
            <argument type="service" id="service_container" />
        </service>
        <service id="sonata.user.form.type.routes" class="Sfynx\AdminBundle\Form\Type\RoutesType">
            <tag name="form.type" alias="sfynx_routes" />
            <argument type="service" id="service_container" />
        </service>        
    </services>

</container>