<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sfynx_media" pattern="/">
        <default key="_controller">SfynxMediaBundle:Media:index</default>
    </route>

    <route id="sfynx_media_show" pattern="/{id}/show">
        <default key="_controller">SfynxMediaBundle:Media:show</default>
    </route>

    <route id="sfynx_media_new" pattern="/new">
        <default key="_controller">SfynxMediaBundle:Media:new</default>
    </route>

    <route id="sfynx_media_create" pattern="/create">
        <default key="_controller">SfynxMediaBundle:Media:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="sfynx_media_edit" pattern="/{id}/edit">
        <default key="_controller">SfynxMediaBundle:Media:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="sfynx_media_update" pattern="/{id}/update">
        <default key="_controller">SfynxMediaBundle:Media:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="sfynx_media_delete" pattern="/{id}/delete">
        <default key="_controller">SfynxMediaBundle:Media:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
